<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane prefHeight="276.0" prefWidth="376.0" style="-fx-background-color: #84A169"
      xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jigsaw.client.viewControllers.HelloController">

    <VBox fx:id="partnerDisconnectedPane" alignment="CENTER" layoutX="8.0" layoutY="7.0"
          prefHeight="257.0" prefWidth="360.0">
        <Label prefHeight="44.0" prefWidth="181.0" style="-fx-font-family: Arial; -fx-font-size: 12"
               text="Would you like to wait for partner &#10;and play again or quit?"
               textAlignment="CENTER"/>
        <Button onAction="#onWaitForPartnerButtonClick" prefWidth="111.0" text="Wait for partner">
            <VBox.margin>
                <Insets bottom="10.0" top="10.0"/>
            </VBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#onQuitButtonClick" text="Quit"/>
    </VBox>
</Pane>
