<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane prefHeight="276.0" prefWidth="376.0" style="-fx-background-color: #84A169"
      xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.jigsaw.client.viewControllers.HelloController">

    <VBox alignment="CENTER" layoutX="20.0" layoutY="17.0" prefHeight="245.0"
          prefWidth="340.0" spacing="10.0">
        <Label style="-fx-font-family: Arial; -fx-font-weight: Bold; -fx-font-size: 20"
               text="Welcome to Jigsaw client!"/>
        <Label prefHeight="46.0" prefWidth="194.0"
               style="-fx-font-family: Arial;     -fx-font-size: 12"
               text="To begin game you need to specify &#10;your nickname:" textAlignment="CENTER"/>
        <Pane prefHeight="52.0" prefWidth="280.0">
            <Label layoutX="25.0" layoutY="19.0" style="-fx-font-family: Arial"
                   text="Player's name"/>
            <TextField fx:id="playerNameField" layoutX="117.0" layoutY="14.0"/>
        </Pane>
        <Button onAction="#onSubmitButtonClick" text="Submit"/>
    </VBox>

</Pane>
